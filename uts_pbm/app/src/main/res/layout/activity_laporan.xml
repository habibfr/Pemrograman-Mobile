<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Laporan">

    <TextView
        android:id="@+id/txtLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringkasan Transaksi" />

    <TextView
        android:id="@+id/txtPemasukan"
        android:layout_width="wrap_content"
        android:text="Pemasukan : 0"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtPengeluaran"
        android:layout_width="wrap_content"
        android:text="Pengeluaran : 0"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo Akhir : 0"/>

    <Button
        android:id="@+id/btnKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kembali" />
</LinearLayout>